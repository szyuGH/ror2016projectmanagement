  <div class="page-header">
    <h2><%=t '.title', :default => [:'helpers.titles.new', 'Log in'] %></h2>
  </div>

<%= bootstrap_form_for(resource, as: resource_name, url: session_path(resource_name),
  layout: :horizontal, label_col: "col-sm-2", control_col: "col-sm-8") do |f| %>
  <% if !flash[:alert].nil? %>
    <div class="alert alert-danger" role="alert">
      <p id="notice"><%= flash[:alert] %></p>
    </div>
  <% end %>

  <%= f.text_field :login, autofocus: true %>

  <%= f.password_field :password, autocomplete: "off" %>

  <% if devise_mapping.rememberable? -%>
    <%= f.form_group :remember_me, label: { text: "Remember me"} do %>
      <%= f.check_box :remember_me, label: "" %>
    <% end %>
  <% end -%>

  <%= f.form_group do %>
    <%= f.submit "Log in" %>
  <% end %>
<% end %>

<%= render "devise/shared/links" %>
