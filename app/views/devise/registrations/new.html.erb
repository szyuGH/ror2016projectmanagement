  <div class="page-header">
    <h2><%=t '.title', :default => [:'helpers.titles.new', 'Sign up'] %></h2>
  </div>

<%= bootstrap_form_for(resource, as: resource_name, url: registration_path(resource_name),
  layout: :horizontal, label_col: "col-sm-2", control_col: "col-sm-8") do |f| %>

  <% if !flash[:alert].nil? %>
    <div class="alert alert-danger" role="alert">
      <p id="notice"><%= flash[:alert] %></p>
    </div>
  <% end %>

    <%= f.text_field :username, autofocus: true %>

    <%= f.text_field :first_name %>

    <%= f.text_field :last_name %>

    <%= f.email_field :email, autofocus: true %>

    <%= f.password_field :password, autocomplete: "off", help: "(#{@minimum_password_length} characters minimum)" %>

    <%= f.password_field :password_confirmation, autocomplete: "off" %>

    <%= f.form_group do %>
      <%= f.submit %>
    <% end %>
<% end %>

<%= render "devise/shared/links" %>
