  <div class="page-header">
    <h2><%=t '.title', :default => [:'helpers.titles.new', 'Change your password'] %></h2>
  </div>

<%= bootstrap_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put },
  layout: :horizontal, label_col: "col-sm-2", control_col: "col-sm-8") do |f| %>
  <%= devise_error_messages! %>
  <%= f.hidden_field :reset_password_token %>

  <%= f.password_field :password, autofocus: true, autocomplete: "off", label: "New password", help: "(#{@minimum_password_length} characters minimum)" %>

  <%= f.password_field :password_confirmation, autocomplete: "off", label: "Confirm new password" %>

  <%= f.form_group do %>
    <%= f.submit "Change my password" %>
    <%= link_to "Back", "#", onclick: "history.back();", :class => 'btn btn-default' %>
  <% end %>
<% end %>

<%= render "devise/shared/links" %>
