  <div class="page-header">
    <h2><%=t '.title', :default => [:'helpers.titles.new', 'Forgot your password?'] %></h2>
  </div>

<%= bootstrap_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post },
  layout: :horizontal, label_col: "col-sm-2", control_col: "col-sm-8") do |f| %>
  <%= devise_error_messages! %>

  <%= f.email_field :email, autofocus: true %>

  <%= f.form_group do %>
    <%= f.submit "Send me reset password instructions" %>
  <% end %>
<% end %>

<%= render "devise/shared/links" %>
