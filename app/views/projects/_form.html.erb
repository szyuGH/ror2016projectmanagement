<%= bootstrap_form_for [@project], layout: :horizontal, label_col: "col-sm-2", control_col: "col-sm-8" do |f| %>

  <%= f.text_field :title %>
  <%= f.text_area :description %>

  <%= f.form_group do %>
    <%= f.submit %>
    <%= link_to "Back", "#", onclick: "history.back();", :class => 'btn btn-default' %>
  <% end %>
<% end %>
